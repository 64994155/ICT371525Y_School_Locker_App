@model ICT371525Y_School_Locker_App.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5" style="max-width: 400px;">
    <h2 class="mb-4 text-center">Login</h2>

    <form asp-action="Login" method="post" class="border p-4 shadow-sm rounded bg-light">
        <div class="mb-3">
            <label asp-for="IdNumber" class="form-label">ID Number</label>
            <input asp-for="IdNumber" class="form-control" placeholder="Enter your ID number" />
            <span asp-validation-for="IdNumber" class="text-danger small"></span>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mt-4">
            <button type="submit" class="btn btn-primary">Login</button>
            <a href="/Registration/Index" class="btn btn-secondary">Register</a>
        </div>
    </form>
</div>
